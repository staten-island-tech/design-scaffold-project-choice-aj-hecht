<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
    <link rel="stylesheet" href="../style/style.css" />
  </head>
  <body>
    <nav class="desk">
      <ul role="list" class="desk-nav">
        <li>
          <a href="/" class="nav-home-desk">HOME</a>
        </li>
        <li>
          <a href="/blogs/" class="nav-blogs-desk">BLOGS</a>
        </li>
        <li>
          <button class="nav-theme-desk">SWITCH THEME</button>
        </li>
        <li>
          <a href="https://www.youtube.com" class="nav-login-desk">LOG IN</a>
        </li>
      </ul>
    </nav>
    <h1 class="section-title">Famous American Killers</h1>
    {% include 'nav.njk' %}
    <section class="section-container">
      <ul class="articles">
        {%- for post in collections.post -%}
        <article class="article">
          <div class="article-text">
            <h3 class="article-title">{{ post.data.title }}</h3>
            <h4 class="article-author">By {{ post.data.author }}</h4>
            <a href="{{ post.url }}" class="article-link">Continue Reading</a>
          </div>
          <img src="{{ post.data.image }}" alt="" class="img-preview" />
        </article>
        {%- endfor -%}
      </ul>
    </section>
    <script type="module" src="./js/main.js"></script>
  </body>
</html>
